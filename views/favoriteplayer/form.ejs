<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/profile/playerform.css" />
<%- include('../partials/nav') %>

<main>
  <section>
    <h1><%= title %></h1>
    <form action="/profile/<%= user.profile._id %>/favoriteplayer" method="POST">
    <label for="name-input">Name:</label>
    <input type="text" name="name" id="name-input">
    <label for="sport">Sport:</label>
    <input type="text" name="sport" id="sport-input">
    <label for="age-input">Age:</label>
    <input type="number" name="age" id="age-input">
    <label for="team-input">Team:</label>
    <input type="text" name="team" id="team-input">
    <button type="submit">Add Player</button>
    </form>
  </section>
</main>

<%- include('../partials/footer') %>
